<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Book Reviews</div>
    <div class="ui attached segment">
        <div class="ui divided items">
            <% books.forEach(function(book) { %>
                <div class="item">
                    <!-- Controls Image size -->
                    <div class="image"> 
                        <img src="<%= book.image %>" alt="book">
                    </div>
                    <div class="content">
                        <a class="ui huge header" href="/books/<%= book._id %>"><%= book.title %></a>
                        <hr>
                        <div>
                            <h3>Author: <%= book.author %></h3>
                        </div>
                        <div class="description">
                            <p><%- book.description.substring(0, 100) %>...</p>
                            <br>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/books/<%= book._id %>">Read More <i class=" right chevron icon"></i></a>
                        </div>
                    </div> 
                </div>
           <% }); %>
        </div>
    </div>
</div>

<% include ./partials/footer %>


