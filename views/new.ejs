<% include ./partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">New Review</div>
        <form action="/books" method="POST" class="ui form">
            <div class="field">
                <label>Title of the Book</label>
                <input type="text" name="book[title]" placeholder="Title">
            </div>
            <div class="field">
                <label>Author</label>
                <input type="text" name="book[author]" placeholder="Author">
            </div>
            <div class="field">
                <label>Cover Image</label>
                <input type="text" name="book[image]" placeholder="Image">
            </div>
            <div class="field">
                <label>Your Review</label>
                <textarea name="book[review]" placeholder="Write your review here"></textarea>
            </div>
            <input class="ui button" type="submit">
        </form>
</div>


