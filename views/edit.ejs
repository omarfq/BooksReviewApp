<% include ./partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">Edit your Review of <%= book.title %></div>
        <form action="/books/<%= book._id %>?_method=PUT" method="POST" class="ui form">
            <div class="field">
                <label>Title of the Book</label>
                <input type="text" name="book[title]" value="<%= book.title %>">
            </div>
            <div class="field">
                <label>Author</label>
                <input type="text" name="book[author]" value="<%= book.author %>">
            </div>
            <div class="field">
                <label>Cover Image</label>
                <input type="text" name="book[image]" value="<%= book.image %>">
            </div>
            <div class="field">
                <label>Your Review</label>
                <textarea name="book[review]"><%= book.review %></textarea>
            </div>
            <input class="ui blue basic button" type="submit">
        </form>
</div>


<% include ./partials/footer %>